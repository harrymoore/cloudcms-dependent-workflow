{
    "type": "dependent-content-list",
    "config": {
        "chrome": false,
        "buttons": [{
            "key": "add-association",
            "title": "Add Association",
            "iconClass": "fa fa-plus",
            "align": "left",
            "action": "add-association",
            "allowPermission": [
                "create_subobjects"
            ]
        }],
        "options": {
            "filter": false
        },
        "columns": [{
            "title": "Document",
            "key": "document"
        }, {
            "title": "Association",
            "key": "association"
        }],
        "icon": true,
        "checkbox": true,
        "loader": "gitana",
        "selectorGroups": {
            "multi-documents-action-selector-group": {
                "actions": [{
                    "action": "delete-associations",
                    "order": 100,
                    "allowPermission": [
                        "delete"
                    ]
                }]
            },
            "sort-selector-group": {
                "fields": [{
                    "key": "type",
                    "title": "Association Type",
                    "field": "_type"
                }, {
                    "key": "directionality",
                    "title": "Direction",
                    "field": "directionality"
                }, {
                    "key": "createdOn",
                    "title": "Created On",
                    "field": "_system.created_on.ms"
                }, {
                    "key": "createdBy",
                    "title": "Created By",
                    "field": "_system.created_by"
                }, {
                    "key": "modifiedOn",
                    "title": "Modified On",
                    "field": "_system.modified_on.ms"
                }, {
                    "key": "modifiedBy",
                    "title": "Modified By",
                    "field": "_system.modified_by"
                }, {
                    "key": "order",
                    "title": "Order",
                    "field": "order"
                }]
            }
        }
    }
}